<div id="background-color" class="center">
    <section class="question-margin">
        <div class="ask-question-card">
            <h3 class="titular">Ask a Question</h3>
            <form class="ask-question-form card-body">
                <div class="form-group">
                    <label class="form-label" for="question-title"></label>
                    <input class="form-input question-title" type="text" id="question-title"/>
                </div>
                <div class="form-group">
                    <label for="question-text"></label>
                    <textarea class="form-input question-text" type="text"
                              id="question-text"></textarea>
                </div>
                <div class="form-group">
                    <button
                            id="ask-question-form"
                            class="ask-btn"
                            type="submit"
                    >ASK!</button>
                </div>
            </form>
        </div>
    </section>
</div>


<script src="js/askQuestion.js"></script>